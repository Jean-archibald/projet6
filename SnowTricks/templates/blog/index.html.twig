{% extends 'base.html.twig' %}

{% block title %} Hello BlogController ! {% endblock %}

{% block body %}
<section class="homeImage">

</section>
<section class="articles">

    {% for trick in tricks %}
    <article>   
        <h2>{{ trick.title }}</h2>
        <div>
            <img src="{{ asset('uploads/' ) ~ trick.featuredPhoto }} ">
        </div>
        <div class="metadata">Created the {{ trick.createdAt | date('d/m/Y') }} Ã  {{ trick.createdAt | date('H:i') }} </div>
        <div> Trick type : {{ trick.trickType }}</div>
        <div class="content">
            {{ trick.content | raw }}
        </div>
        <div>
             <a href="{{ path('blog_show', {'id' : trick.id }) }}" class="btn btn-primary"> Read more...</a>
        </div>
    </article>

    {% endfor %}
</section>

{% endblock %}
