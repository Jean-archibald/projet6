{% extends 'base.html.twig' %}


{% block body %}
<div class="titleAllPages">
    {% if editMode %}
<h1>Modify Trick</h1>
{% else %}
<h1>Create Trick</h1>
{% endif %}   
</div>
<div class="createFormDiv">

    {{ form_start(formTrick) }}


    {{ form_row(formTrick.title, {
        'attr': {'placeholder' : 'Trick title'}
    }) }}

    {{ form_row(formTrick.content, {
        'attr': {'placeholder' : 'Trick content'}
    }) }}

    {{ form_row(formTrick.type, {
        'attr': {'placeholder' : 'Trick type'}
    }) }}

    {% if editMode %}
          {{ form_row(formTrick.featuredPhoto, {'required': false ,'value': photoFeatured ,'label' : 'Change the Featured photo ?',
        'attr': {'placeholder' : 'Upload a new Featured photo ?'}
    }) }}
    {% else %}
             {{ form_row(formTrick.featuredPhoto, {'label' : 'Choose a Featured photo',
        'attr': {'placeholder' : 'Upload a Featured photo'}
    }) }}
    {% endif %}
        <div class="buttonConfirm">
            <button type="submit" class="btn btn-success">
            {% if editMode %}
            Save Modification
            {% else %}
            Save Trick
            {% endif %}
            </button>
        </div>

        {{ form_end(formTrick) }}

   
    {% if editMode %}
        <div class="buttonDelete">
            <a href="{{ path('blog_delete', {'id' : trick.id }) }}">
            <button class="btn btn-danger">Delete the trick</button></a>
        </div>
    {% endif %}

</div>
{% endblock %}
