{% extends 'base.html.twig' %} 
{% block body %}
<container class="containerHome">
    <img src="{{ asset('uploads/homeImage.jpg' ) }} " alt="snowboard" class="mainPhoto"/>
    <div class="textPhoto">
        <h1>Welcome to SnowTricks</h1>
    </div>
</container>
<div class="articleListDiv">
        {% for trick in tricks %}
        <div class="articleDiv">   
            <div class="divPhoto">
                <img src="{{ asset('uploads/' ) ~ trick.featuredPhoto }}" class="photoSize">
            </div>
            <div class="infoTrick">
                <div class="trickTitle">
                    <a href="{{ path('blog_show', {'id' : trick.id }) }}"><p>{{ trick.title }}</p></a>
                </div>
                <div class="buttonModifyAndDelete trickListButton">
                    <a href="{{ path('blog_edit', {'id' : trick.id }) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                    <a href="{{ path('blog_edit', {'id' : trick.id }) }}" class="btn btn-primary"><i class="fas fa-trash"></i></a>
                </div>
            </div>
        </div>
        {% endfor %}
</div>
{% endblock %}